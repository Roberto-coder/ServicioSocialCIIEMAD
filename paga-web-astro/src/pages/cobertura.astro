  <script>
    // Función para filtrar las coberturas en la lista y en el carrusel
    function filterCoverage() {
      const searchInput = document.getElementById('searchInput').value.toLowerCase();
      // Filtrar lista de tarjetas
      const coverageItems = document.querySelectorAll('#coverageList > div');
      coverageItems.forEach(item => {
        const text = (item.querySelector('h2')?.innerText + ' ' + item.querySelector('p')?.innerText).toLowerCase();
        if (text.includes(searchInput)) {
          item.style.display = 'flex';
        } else {
          item.style.display = 'none';
        }
      });
      // Filtrar carrusel
      const carouselItems = document.querySelectorAll('#carousel > div');
      carouselItems.forEach(item => {
        const text = (item.querySelector('h2')?.innerText).toLowerCase();
        if (text.includes(searchInput)) {
          item.style.display = '';
        } else {
          item.style.display = 'none';
        }
      });
    }

    // Función para barajar las coberturas en el carrusel
    function shuffleCarousel() {
      const carouselContainer = document.getElementById('carousel');
      const items = Array.from(carouselContainer.children);
      items.sort(() => Math.random() - 0.5); // Orden aleatorio
      carouselContainer.innerHTML = ''; // Limpiar el contenedor
      items.forEach(item => carouselContainer.appendChild(item)); // Añadir los elementos de nuevo
    }

    // Navegación del carrusel
    function scrollCarousel(direction) {
      const carousel = document.getElementById('carousel');
      const cardWidth = carousel.querySelector('div').offsetWidth + 24; // 24px gap
      carousel.scrollBy({ left: direction * cardWidth, behavior: 'smooth' });
    }
    document.getElementById('prevBtn').onclick = () => scrollCarousel(-1);
    document.getElementById('nextBtn').onclick = () => scrollCarousel(1);

    // Ocultar botones en móvil
    function handleResize() {
      const prevBtn = document.getElementById('prevBtn');
      const nextBtn = document.getElementById('nextBtn');
      if (window.innerWidth < 768) {
        prevBtn.style.display = 'none';
        nextBtn.style.display = 'none';
      } else {
        prevBtn.style.display = 'block';
        nextBtn.style.display = 'block';
      }
    }
    window.addEventListener('resize', handleResize);
    window.onload = () => {
      shuffleCarousel();
      handleResize();
    };
  </script>
  <style>
    /* Ocultar scrollbar en navegadores modernos */
    .scrollbar-hide::-webkit-scrollbar { display: none; }
    .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
  </style>
