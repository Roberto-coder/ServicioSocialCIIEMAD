---
import Layout from '../layouts/BaseLayout.astro';

const publicaciones = [
  {
    titulo: "Indicadores de resiliencia urbana",
    autores: "Dra. Gómez, Mtro. Hernández",
    enlace: "#"
  },
  {
    titulo: "Análisis de política energética en México",
    autores: "Dr. Ruiz, Dra. Martínez",
    enlace: "#"
  }
];
---

<Layout>
  <section class="max-w-5xl mx-auto my-16">
    <h1 class="text-4xl font-serif text-guinda mb-6">Publicaciones</h1>

    <div class="grid gap-6 md:grid-cols-2">
      {publicaciones.map((pub) => (
        <article class="border p-6 rounded-xl shadow hover:shadow-md transition">
          <h2 class="text-xl font-serif text-verde mb-2">{pub.titulo}</h2>
          <p class="text-sm text-gray-600 mb-2">{pub.autores}</p>
          <a href={pub.enlace} class="text-guinda underline">Ver publicación</a>
        </article>
      ))}
    </div>
  </section>
</Layout>
