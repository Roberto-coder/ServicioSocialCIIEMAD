---
import Layout from "../layouts/BaseLayout.astro";
import {
  BookOpen,
  Users,
  FileText,
  ExternalLink,
  Target,
  Award,
  Search,
} from "lucide-astro";

const publicacionesFicticias = [
  {
    titulo: "Análisis de la Resiliencia Urbana en Ciudades Latinoamericanas",
    autores: "Dra. Elena Ríos, Mtro. Juan Pérez",
    enlace: "#",
    tipo: "investigacion",
  },
  {
    titulo: "Implementación de Techos Verdes para Mitigar el Calor Urbano",
    autores: "Dr. Carlos Solís, Arq. Ana Morales",
    enlace: "#",
    tipo: "proyecto",
  },
  {
    titulo: "Impacto de la Economía Circular en la Gestión de Residuos",
    autores: "Dra. Sofía Herrera",
    enlace: "#",
    tipo: "articulo",
  },
  {
    titulo: "Gobernanza del Agua y Participación Ciudadana: Un Caso de Estudio",
    autores: "Mtro. Luis Fernández, Dra. Laura Gómez",
    enlace: "#",
    tipo: "investigacion",
  },
  {
    titulo: "Diseño de un Corredor Biológico Urbano en la Zona Metropolitana",
    autores: "Equipo SustentaLab",
    enlace: "#",
    tipo: "proyecto",
  },
  {
    titulo: "La Política Energética de México frente al Cambio Climático",
    autores: "Dr. Ricardo Vega",
    enlace: "#",
    tipo: "articulo",
  },
];
---

<Layout>
  <section class="max-w-5xl mx-auto my-20 px-4 font-sans">
    <div class="text-center mb-16">
      <div class="flex justify-center mb-6">
        <div class="bg-verde/10 p-4 rounded-full">
          <Target class="w-12 h-12 text-verde" />
        </div>
      </div>
      <h1 class="text-5xl font-serif text-guinda mb-4">Nuestro Trabajo</h1>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto font-sans">
        Nuestras publicaciones reflejan el compromiso con el desarrollo
        sostenible y la toma de decisiones informada por la evidencia
        científica. Explora todos nuestros trabajos a continuación.
      </p>
    </div>

    <!-- Publicaciones Grid -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        publicacionesFicticias.map((pub) => (
          <article class="bg-white border border-gray-200 p-6 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 group">
            <div class="flex items-center mb-4">
              <div class="bg-verde/10 p-2 rounded-lg mr-3">
                {pub.tipo === "articulo" && (
                  <FileText class="w-6 h-6 text-verde" />
                )}
                {pub.tipo === "investigacion" && (
                  <Search class="w-6 h-6 text-verde" />
                )}
                {pub.tipo === "proyecto" && (
                  <Award class="w-6 h-6 text-verde" />
                )}
              </div>
              <div class="flex-1">
                <span class="text-xs uppercase tracking-wide text-gray-500 font-medium">
                  {pub.tipo === "articulo"
                    ? "Artículo"
                    : pub.tipo === "investigacion"
                      ? "Investigación"
                      : "Proyecto"}
                </span>
              </div>
            </div>

            <h2 class="text-xl font-serif text-guinda mb-2 group-hover:text-verde transition-colors">
              {pub.titulo}
            </h2>
            <p class="text-sm text-gray-600 mb-4 flex items-center">
              <Users class="w-4 h-4 mr-1" />
              {pub.autores}
            </p>

            <a
              href={pub.enlace}
              class="inline-flex items-center text-verde hover:text-guinda transition-colors font-medium"
            >
              <BookOpen class="w-4 h-4 mr-2" />
              Ver publicación
              <ExternalLink class="w-4 h-4 ml-1" />
            </a>
          </article>
        ))
      }
    </div>
  </section>
</Layout>
