---
import Layout from '../../layouts/BaseLayout.astro';
import { ArrowLeft, Mail, GraduationCap, Users, Target } from 'lucide-astro';
---

<Layout>
  <div class="max-w-4xl mx-auto px-4 pt-8">
    <a href="/sobre-nosotros" class="inline-flex items-center text-verde hover:text-guinda transition-colors mb-8">
      <ArrowLeft class="w-4 h-4 mr-2" />
      Volver al equipo
    </a>
  </div>

  <section class="max-w-4xl mx-auto px-4 pb-16">
    <div class="grid md:grid-cols-3 gap-8 mb-12">
      <div class="md:col-span-1">
        <div class="aspect-square rounded-xl overflow-hidden shadow-lg">
          <img 
            src="/equipo/dra-lopez.jpg" 
            alt="Dra. Patricia López"
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      <div class="md:col-span-2">
        <h1 class="text-4xl font-serif text-guinda mb-2">Dra. Patricia López</h1>
        <p class="text-xl text-verde font-medium mb-4">Especialista en Tecnología</p>
        
        <div class="flex items-center mb-6">
          <Mail class="w-5 h-5 text-gray-500 mr-2" />
          <a href="mailto:patricia.lopez@ciiemad.ipn.mx" class="text-guinda hover:underline">
            patricia.lopez@ciiemad.ipn.mx
          </a>
        </div>

        <div class="mb-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-3 flex items-center">
            <GraduationCap class="w-5 h-5 mr-2" />
            Áreas de Especialización
          </h3>
          <div class="flex flex-wrap gap-2">
            <span class="bg-verde/10 text-verde px-3 py-1 rounded-full text-sm font-medium">Transformación Digital</span>
            <span class="bg-verde/10 text-verde px-3 py-1 rounded-full text-sm font-medium">Análisis de Datos</span>
            <span class="bg-verde/10 text-verde px-3 py-1 rounded-full text-sm font-medium">Innovación Tecnológica</span>
          </div>
        </div>

        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-lg font-semibold text-gray-800 mb-3 flex items-center">
            <Users class="w-5 h-5 mr-2" />
            Semblanza Profesional
          </h3>
          <p class="text-gray-700 leading-relaxed">
            Doctora en Sistemas de Información con especialización en transformación digital para el desarrollo sostenible. Lidera proyectos de innovación tecnológica aplicada a soluciones ambientales. Experta en análisis de datos y modelado predictivo para sostenibilidad.
          </p>
        </div>
      </div>
    </div>

    <div class="bg-white border border-gray-200 rounded-xl p-8">
      <h3 class="text-2xl font-serif text-guinda mb-6 flex items-center">
        <Target class="w-6 h-6 mr-3" />
        Proyectos Destacados
      </h3>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="border-l-4 border-verde pl-4">
          <h4 class="font-semibold text-gray-800 mb-2">Transformación Digital Sostenible</h4>
          <p class="text-gray-600 text-sm">Desarrollo de plataformas digitales para monitoreo ambiental y sostenibilidad urbana.</p>
        </div>
        <div class="border-l-4 border-guinda pl-4">
          <h4 class="font-semibold text-gray-800 mb-2">Análisis Predictivo Ambiental</h4>
          <p class="text-gray-600 text-sm">Implementación de modelos de machine learning para predicción de impactos ambientales.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
