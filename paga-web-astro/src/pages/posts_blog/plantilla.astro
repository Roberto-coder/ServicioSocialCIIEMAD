---
import Layout from "../../layouts/BaseLayout.astro";
import { posts } from "../../content/blog.js";

export async function getStaticPaths() {
  return posts.map((p) => ({ params: { id: p.id } }));
}

const post = posts.find((p) => p.id === Astro.params.id) || null;
---

<Layout>
  <main class="max-w-3xl mx-auto px-4 py-12">
    {post ? (
      <article class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="h-64 bg-gray-100 overflow-hidden">
          <img src={post.image} alt={post.title} class="w-full h-full object-cover" loading="lazy" />
        </div>
        <div class="p-8">
          <h1 class="text-3xl font-serif text-guinda mb-3">{post.title}</h1>
          <div class="text-sm text-gray-500 mb-6">{post.date} · {post.author}</div>
          <div class="prose max-w-none text-gray-700">
            <!-- Actualmente solo tenemos 'excerpt' en los posts de ejemplo. -->
            <p>{post.excerpt}</p>
            <p>Contenido completo del artículo aún no disponible. Reemplaza <code>excerpt</code> por el body real o importa Markdown para renderizar el contenido completo.</p>
          </div>

          <div class="mt-8">
            <a href="/blog" class="text-guinda hover:underline">← Volver al Blog</a>
          </div>
        </div>
      </article>
    ) : (
      <div class="text-center py-24">
        <h2 class="text-2xl font-serif mb-4">Entrada no encontrada</h2>
        <p class="text-gray-600 mb-6">Lo sentimos, no encontramos este artículo.</p>
        <a href="/blog" class="text-guinda hover:underline">Volver al Blog</a>
      </div>
    )}
  </main>
</Layout>
