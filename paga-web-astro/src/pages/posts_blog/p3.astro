---
import Layout from "../../layouts/BaseLayout.astro";
const meta = {
  id: "p3",
  title: "Estrategias participativas en gestión ambiental",
  date: "2025-09-02",
  author: "Ana Laura",
  image:
    "https://one-more-tree.org/es/wp-content/uploads/sites/13/2025/02/599323-870x563-1.jpg",
};
---

<Layout>
  <main class="max-w-3xl mx-auto px-4 py-12">
    <article class="bg-white rounded-xl shadow-md overflow-hidden">
      <div class="h-64 bg-gray-100 overflow-hidden">
        <img
          src={meta.image}
          alt={meta.title}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
      <div class="p-8">
        <h1 class="text-3xl font-serif text-guinda mb-3">{meta.title}</h1>
        <div class="text-sm text-gray-500 mb-6">
          {meta.date} · {meta.author}
        </div>

        <div class="prose max-w-none text-gray-700">
          <p>
            Descripción de enfoques participativos, herramientas de
            involucramiento comunitario y casos de éxito.
          </p>

          <h2>Herramientas</h2>
          <p>Foros, talleres, mapeo participativo y seguimiento comunitario.</p>

          <h3>Lecciones aprendidas</h3>
          <p>Buenas prácticas y errores comunes a evitar.</p>
        </div>

        <div class="mt-8">
          <a href="/blog" class="text-guinda hover:underline"
            >← Volver al Blog</a
          >
        </div>
      </div>
    </article>
  </main>
</Layout>
