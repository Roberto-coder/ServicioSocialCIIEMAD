---
// src/components/Header.astro
import MenuDropdown from './MenuDropdown.astro'
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3 flex justify-between items-center">
    <!-- Logo y título - Responsivo -->
    <a href="/" class="flex items-center gap-2 sm:gap-3">
        <img src="/logo.png" alt="Logo CIIEMAD IPN" class="h-10 sm:h-12 lg:h-16 w-auto" />
        <h1 class="text-lg sm:text-2xl lg:text-4xl font-extrabold">
        <span class="text-verde">SUSTENTA-</span><span class="text-gray-700">LAPP</span>
        </h1>
    </a>

    <!-- Menú Desktop - Oculto en móvil -->
    <ul class="hidden lg:flex gap-6 text-sm font-medium text-gray-700">
      <MenuDropdown />
      <li>
        <a href="/nuestro-trabajo" class="relative font-bold transition-colors duration-300 hover:text-yellow-600 after:absolute after:left-0 after:-bottom-1 after:w-full after:h-0.5 after:bg-yellow-500 after:scale-x-0 hover:after:scale-x-100 after:transition-transform after:duration-300">
          Nuestro trabajo
        </a>
      </li>
      <li>
        <a href="/publicaciones" class="relative font-bold transition-colors duration-300 hover:text-blue-500 after:absolute after:left-0 after:-bottom-1 after:w-full after:h-0.5 after:bg-blue-600 after:scale-x-0 hover:after:scale-x-100 after:transition-transform after:duration-300">
          Publicaciones
        </a>
      </li>
      <li>
        <a href="/cobertura" class="relative font-bold transition-colors duration-300 hover:text-green-700 after:absolute after:left-0 after:-bottom-1 after:w-full after:h-0.5 after:bg-green-600 after:scale-x-0 hover:after:scale-x-100 after:transition-transform after:duration-300">
          Cobertura
        </a>
      </li>
      <li>
        <a href="/conocer-mas" class="relative font-bold transition-colors duration-300 hover:text-gray-600 after:absolute after:left-0 after:-bottom-1 after:w-full after:h-0.5 after:bg-gray-600 after:scale-x-0 hover:after:scale-x-100 after:transition-transform after:duration-300">
          Podcast
        </a>
      </li>
    </ul>

    <!-- Botón Hamburguesa - Solo visible en móvil/tablet -->
    <button 
      id="mobile-menu-button"
      class="lg:hidden flex flex-col justify-center items-center w-8 h-8 bg-verde text-white rounded-md hover:bg-green-700 transition-colors duration-200"
      aria-label="Abrir menú de navegación"
    >
      <span class="hamburger-line w-5 h-0.5 bg-white mb-1 transition-all duration-300"></span>
      <span class="hamburger-line w-5 h-0.5 bg-white mb-1 transition-all duration-300"></span>
      <span class="hamburger-line w-5 h-0.5 bg-white transition-all duration-300"></span>
    </button>
  </nav>

  <!-- Menú Móvil - Deslizable -->
  <div 
    id="mobile-menu" 
    class="lg:hidden fixed top-16 left-0 w-full bg-white border-t border-gray-200 shadow-lg transform -translate-y-full opacity-0 transition-all duration-300 ease-in-out z-40"
  >
    <nav class="px-4 py-6">
      <ul class="space-y-4">
        <!-- Dropdown móvil para "Sobre nosotros" -->
        <li>
          <button 
            id="mobile-dropdown-button"
            class="w-full text-left font-bold text-gray-700 hover:text-guinda transition-colors duration-200 flex items-center justify-between"
          >
            Sobre nosotros
            <svg class="w-4 h-4 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <ul id="mobile-dropdown-menu" class="mt-2 ml-4 space-y-2 hidden">
            <li>
              <a href="/sobre-nosotros#mision-vision" class="block text-gray-600 hover:text-verde transition-colors duration-200">
                Nuestra misión
              </a>
            </li>
            <li>
              <a href="/sobre-nosotros#equipo" class="block text-gray-600 hover:text-verde transition-colors duration-200">
                Nuestro equipo
              </a>
            </li>
          </ul>
        </li>
        <li>
          <a href="/nuestro-trabajo" class="block font-bold text-gray-700 hover:text-yellow-600 transition-colors duration-200">
            Nuestro trabajo
          </a>
        </li>
        <li>
          <a href="/publicaciones" class="block font-bold text-gray-700 hover:text-blue-500 transition-colors duration-200">
            Publicaciones
          </a>
        </li>
        <li>
          <a href="/cobertura" class="block font-bold text-gray-700 hover:text-green-700 transition-colors duration-200">
            Cobertura
          </a>
        </li>
        <li>
          <a href="/conocer-mas" class="block font-bold text-gray-700 hover:text-gray-600 transition-colors duration-200">
            Podcast
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  // Script para el menú hamburguesa
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const hamburgerLines = document.querySelectorAll('.hamburger-line');
    const mobileDropdownButton = document.getElementById('mobile-dropdown-button');
    const mobileDropdownMenu = document.getElementById('mobile-dropdown-menu');
    
    let isMenuOpen = false;
    let isDropdownOpen = false;

    // Toggle menú principal
    mobileMenuButton?.addEventListener('click', function() {
      isMenuOpen = !isMenuOpen;
      
      if (isMenuOpen) {
        mobileMenu?.classList.remove('-translate-y-full', 'opacity-0');
        mobileMenu?.classList.add('translate-y-0', 'opacity-100');
        
        // Animar hamburguesa a X
        hamburgerLines[0]?.classList.add('rotate-45', 'translate-y-1.5');
        hamburgerLines[1]?.classList.add('opacity-0');
        hamburgerLines[2]?.classList.add('-rotate-45', '-translate-y-1.5');
      } else {
        mobileMenu?.classList.add('-translate-y-full', 'opacity-0');
        mobileMenu?.classList.remove('translate-y-0', 'opacity-100');
        
        // Restaurar hamburguesa
        hamburgerLines[0]?.classList.remove('rotate-45', 'translate-y-1.5');
        hamburgerLines[1]?.classList.remove('opacity-0');
        hamburgerLines[2]?.classList.remove('-rotate-45', '-translate-y-1.5');
      }
    });

    // Toggle dropdown móvil
    mobileDropdownButton?.addEventListener('click', function() {
      isDropdownOpen = !isDropdownOpen;
      const arrow = this.querySelector('svg');
      
      if (isDropdownOpen) {
        mobileDropdownMenu?.classList.remove('hidden');
        arrow?.classList.add('rotate-180');
      } else {
        mobileDropdownMenu?.classList.add('hidden');
        arrow?.classList.remove('rotate-180');
      }
    });

    // Cerrar menú al hacer clic en un enlace
    const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
    mobileMenuLinks?.forEach(link => {
      link.addEventListener('click', function() {
        isMenuOpen = false;
        mobileMenu?.classList.add('-translate-y-full', 'opacity-0');
        mobileMenu?.classList.remove('translate-y-0', 'opacity-100');
        
        // Restaurar hamburguesa
        hamburgerLines[0]?.classList.remove('rotate-45', 'translate-y-1.5');
        hamburgerLines[1]?.classList.remove('opacity-0');
        hamburgerLines[2]?.classList.remove('-rotate-45', '-translate-y-1.5');
      });
    });

    // Cerrar menú al hacer clic fuera
    document.addEventListener('click', function(e) {
      const target = e.target as HTMLElement;
      if (isMenuOpen && !mobileMenu?.contains(target) && !mobileMenuButton?.contains(target)) {
        isMenuOpen = false;
        mobileMenu?.classList.add('-translate-y-full', 'opacity-0');
        mobileMenu?.classList.remove('translate-y-0', 'opacity-100');
        
        // Restaurar hamburguesa
        hamburgerLines[0]?.classList.remove('rotate-45', 'translate-y-1.5');
        hamburgerLines[1]?.classList.remove('opacity-0');
        hamburgerLines[2]?.classList.remove('-rotate-45', '-translate-y-1.5');
      }
    });
  });
</script>
