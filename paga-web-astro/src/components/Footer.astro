---
// src/components/Footer.astro
---

<footer class="bg-[rgb(110,25,66)] text-white py-12 mt-20">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Contenedor principal con logos y texto -->
    <div
      class="flex flex-col md:flex-row items-center justify-between gap-8 mb-8"
    >
      <!-- Logo Izquierdo -->
      <div class="flex-shrink-0">
        <img src="/logo_ipn.jpg" alt="Logo IPN" class="h-32 w-auto md:h-40" />
      </div>

      <!-- Texto Central -->
      <div class="flex-1 text-center px-4 text-white">
        <h3 class="text-2xl font-bold mb-2 text-white">
          <span class="text-white">SUSTENTA-</span>
          <span class="text-white">LAPP</span>
        </h3>
        <p class="text-white mb-4 max-w-md mx-auto">
          Centro Interdisciplinario de Investigaciones y Estudios sobre Medio
          Ambiente y Desarrollo
        </p>
        <div class="space-y-1 text-sm text-white">
          <p class="text-white">Instituto Politécnico Nacional</p>
          <p class="text-white">
            30 de Junio de 1520 s/n, La Laguna Ticoman, Gustavo A. Madero, 07340
            Ciudad de México, CDMX
          </p>
        </div>
      </div>

      <!-- Logo Derecho -->
      <div class="flex-shrink-0">
        <img
          src="/ciiemad-logo.png"
          alt="Logo CIIEMAD"
          class="h-32 w-auto md:h-40"
        />
      </div>
    </div>

    <!-- Línea divisoria -->
    <div class="border-t-2 border-white pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <!-- Copyright -->
        <div class="text-sm text-white text-center md:text-left">
          <p class="text-white">
            &copy; {new Date().getFullYear()} CIIEMAD - Todos los derechos reservados
          </p>
        </div>

        <!-- Enlaces adicionales -->
        <div class="flex gap-6 text-sm">
          <a href="/sobre-nosotros" class="text-white hover:text-gray-200 transition-colors">Sobre nosotros</a>
          <a href="/publicaciones" class="text-white hover:text-gray-200 transition-colors">Publicaciones</a>
          <a href="/contacto" class="text-white hover:text-gray-200 transition-colors">Contacto</a>
        </div>

        <!-- Tecnologías -->
        <div class="text-sm text-white text-center md:text-right">
          <p class="text-white">Desarrollado con Astro + Tailwind CSS</p>
        </div>
      </div>
    </div>
  </div>
</footer>
